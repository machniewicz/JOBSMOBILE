<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/lista_resumo" >
        
        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_alignParentLeft="true"
        	    android:orientation="vertical" >

        		<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="match_parent"
        		    android:orientation="horizontal" >

        		    <ImageView
        		        android:id="@+id/imageView1"
        		        android:layout_width="20dp"
        		        android:layout_height="20dp" 
        		        android:src="@drawable/item_oportunidade_jobs"/>
        		    
        		    <TextView
        		        android:id="@+id/lbl_cidade_estado_oportunidade"
        		        android:layout_width="match_parent"
        		        android:layout_height="wrap_content"
        		        android:paddingLeft="5dp"
        		        android:textAppearance="?android:attr/textAppearanceMedium"
        		        android:textColor="@color/text_principal_resumo"
        		        android:textSize="16sp"
        		        android:textStyle="bold" />

        		</LinearLayout>

        			<TextView
        		    android:id="@+id/lbl_data_oportunidade"
        		    android:layout_width="match_parent"
        		    android:layout_height="wrap_content"
        		    android:paddingLeft="5dp"
        		    android:textAppearance="?android:attr/textAppearanceMedium"
        		    android:textColor="@color/text_outras_resumo"
        		    android:textSize="16sp" />
        			
        			<TextView
        		    android:id="@+id/lbl_codigo_oportunidade"
        		    android:layout_width="match_parent"
        		    android:layout_height="wrap_content"
        		    android:paddingLeft="5dp"
        		    android:textAppearance="?android:attr/textAppearanceMedium"
        		    android:textColor="@color/text_outras_resumo"
        		    android:textSize="16sp" />
					
        			<TextView
        		    android:id="@+id/lbl_funcao_oportunidade"
        		    android:layout_width="match_parent"
        		    android:layout_height="wrap_content"
        		    android:paddingLeft="5dp"
        		    android:textAppearance="?android:attr/textAppearanceMedium"
        		    android:textColor="@color/text_outras_resumo"
        		    android:textSize="16sp" />

        			<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="match_parent"
        		    android:orientation="horizontal"
        		    android:layout_marginRight="10dp" >

        		    <ImageView
        		        android:id="@+id/imageViewVaga"
        		        android:layout_width="20dp"
        		        android:layout_height="20dp"
        		        android:src="@drawable/ha_vaga" />
        		    	
        		    <TextView
        		        android:id="@+id/lbl_vaga_perfil"
        		        android:layout_width="match_parent"
        		        android:layout_height="wrap_content"
        		        android:paddingLeft="5dp"
        		        android:textAppearance="?android:attr/textAppearanceMedium"
        		    	android:textColor="@color/text_outras_resumo"
        		        android:textSize="16sp"
        		        android:textStyle="bold" />

        		</LinearLayout>
        			
        	</LinearLayout>
        	
        	 
    </RelativeLayout>
    
</RelativeLayout>