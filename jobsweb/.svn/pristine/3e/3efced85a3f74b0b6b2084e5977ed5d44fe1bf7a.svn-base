<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">

<ui:composition
	template="/paginas/templates/componentes/layout_corpo.xhtml">

	<ui:define name="content">

		<div class="container">

			<div class="row">

				<div class="box">

					<div align="center">


						<p:fieldset legend="#{msg.lbl_usuario_detalhar_titulo}">

							<h:form id="formUsuario" acceptcharset="ISO-8859-1">

								<p:growl id="messages" showDetail="true" />

								<h:panelGrid columns="2" cellpadding="5" cellspacing="5">

									<h:outputLabel value="#{msg.lbl_usuario_incluir_descricao}" />
									<h:outputText value="#{usuarioMB.usuario.usuario_descricao}"
										size="100" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_login}" />
									<h:outputText value="#{usuarioMB.usuario.usuario_login}"
										size="30" styleClass="fonteCorFormulario" />

									<h:outputText value="#{msg.lbl_usuario_incluir_senha}" />
									<h:outputText value="#{msg.lbl_usuario_get_senha}" size="30"
										styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_email}" />
									<h:outputText value="#{usuarioMB.usuario.usuario_email}"
										size="50" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_site}" />
									<h:outputText value="#{usuarioMB.usuario.empresa.empresa_site}"
										size="100" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_telefone}" />
									<h:outputText
										value="#{usuarioMB.usuario.empresa.empresa_telefone}"
										size="50" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_data}" />
									<h:outputText value="#{usuarioMB.usuario.usuario_dt_inclusao}"
										size="20" styleClass="fonteCorFormulario"
										converter="dateConverter" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_perfil}" />
									<h:outputText value="#{usuarioMB.carregaPerfilUsuario(1)}"
										styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_usuario_incluir_status}" />
									<h:outputText value="#{usuarioMB.carregaStatusUsuario()}"
										styleClass="fonteCorFormulario" />

								</h:panelGrid>

								<p:separator style="width: 100%; height: 2px" />
								<h:outputLabel value="#{msg.lbl_empresa_dados}" />

								<h:panelGrid columns="2" cellpadding="5" cellspacing="5">

									<h:outputLabel value="#{msg.lbl_empresa_incluir_razao}" />
									<h:outputText
										value="#{usuarioMB.usuario.empresa.empresa_razao}" size="50"
										styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_empresa_incluir_cnpj}" />
									<h:outputText value="#{usuarioMB.usuario.empresa.empresa_cnpj}"
										size="50" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_empresa_incluir_endereco}" />
									<h:outputText
										value="#{usuarioMB.usuario.empresa.empresa_endereco}"
										size="50" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_empresa_incluir_bairro}" />
									<h:outputText
										value="#{usuarioMB.usuario.empresa.empresa_bairro}" size="50"
										styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_empresa_incluir_cidade}" />
									<h:outputText
										value="#{usuarioMB.usuario.empresa.cidade.cidade_descricao}"
										size="50" styleClass="fonteCorFormulario" />

									<h:outputLabel value="#{msg.lbl_empresa_incluir_estado}" />
									<h:outputText
										value="#{usuarioMB.usuario.empresa.estado.estado_descricao}"
										size="50" styleClass="fonteCorFormulario" />
								</h:panelGrid>

								<p:separator style="width: 100%; height: 2px" />

								<h:panelGrid columns="3" cellpadding="20" cellspacing="20">
									<p:commandButton value="#{msg.btn_voltar_usuario}"
										icon="#{msg.icon_btn_voltar}"
										action="#{usuarioMB.voltarUsuario}" ajax="false" />
								</h:panelGrid>
							</h:form>

						</p:fieldset>
					</div>
				</div>
			</div>
		</div>



	</ui:define>

</ui:composition>

</html>