<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/TitleBar"
        android:background="@drawable/shapetextview" >
                       
       <ImageView
            style="@style/TitleBarLogo"
            android:id="@+id/img1"                
            android:src="@drawable/jobs_medium_2"
            android:contentDescription="@null"
            android:layout_marginTop = "5dip"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginBottom = "4dip"
            android:paddingBottom = "2dip"
            android:background="@null"
            android:layout_gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="7dip" />
 
        <ImageView
            android:id="@+id/sep"
            android:contentDescription="@null"
            android:layout_width="1dp"
            android:layout_height="fill_parent"   
            android:background="@drawable/separator"
            android:layout_marginRight="7dip"/>
 
        <TextView
            android:id="@+id/tv1"
            style="@style/TitleBarText"
            android:paddingLeft="8dip"
            android:text="@string/app_name"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSair"
            android:src="@drawable/exit" />
            
    </LinearLayout>
 
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llRodape"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >
 
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
         
                   <ImageView
                       android:id="@+id/ivOportunidades"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:onClick="onClickOportunidade"
                       android:src="@drawable/vagas_jobs" />
         
                   <ImageView
                       android:id="@+id/ivResumo"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:onClick="onClickResumo"
                       android:src="@drawable/resumo_jobs" />
					
            </LinearLayout>
 
            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal" >
 
                <TextView
                    android:id="@+id/tvOportunidade"
                    style="@style/HomeText"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/ac_principal_btn_vagas" />
 
                <TextView
                    android:id="@+id/tvResumo"
                    style="@style/HomeText"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/ac_principal_btn_resumo" />
            </LinearLayout>
			
            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
         
                   <ImageView
                       android:id="@+id/ivHistorico"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:onClick="onClickHistorico"
                       android:src="@drawable/historico_jobs" />
                   
                   <ImageView
                       android:id="@+id/ivEmail"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:onClick="onClickEmail"
                       android:src="@drawable/email_jobs" />
                   
         	</LinearLayout>
            
            <LinearLayout
                android:id="@+id/LinearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal" >
 
                <TextView
                    android:id="@+id/tvHistorico"
                    style="@style/HomeText"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/ac_principal_btn_historico" />
                
                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/HomeText"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/ac_principal_btn_email" />
             </LinearLayout>
                         
            <LinearLayout
                android:id="@+id/LinearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal" >
         
                   <ImageView
                       android:id="@+id/ivLogo_Jobs"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:onClick="onClickSobre"
                       android:src="@drawable/jobs_large" />

            </LinearLayout> 
            
             <LinearLayout
                android:id="@+id/LinearLayout7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
         
 				<TextView
                    android:id="@+id/tvDuvidas"
                    style="@style/HomeText"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="Tire suas duvidas" />
            </LinearLayout>      
             
            <LinearLayout
                android:id="@+id/LinearLayout8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal" >
            </LinearLayout>           
        </LinearLayout>
 
    </RelativeLayout>
         
    <LinearLayout
        android:id="@+id/llRodape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
 
        <TextView
            android:id="@+id/tvRodape"
            style="@style/TitleBarText"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/shapetextview"/>
    </LinearLayout>       
 
</RelativeLayout>